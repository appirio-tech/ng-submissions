h4.work-name {{ vm.work.name }} : {{ vm.work.type }}

ul.actions
  li.submitter
    .avatar

    .name-time
      .name {{vm.work.submitter.name}}

      time Submitted: {{vm.work.dateCreated}}

  li.accept
    button.checkmark(ng-click="vm.acceptSubmission()")

    p(ng-if="!vm.submissionAccepted") Accept this submission
    p(ng-if="vm.submissionAccepted") Submission Accepted

  li.comment
    button.bubble

    p Comment on this submission

ul.previews
  li.preview(ng-repeat="file in vm.work.files track by $index")
    .checkmark

    button.img(ui-sref="submission-slides")

    p {{file.name}}