include parts/header

include parts/timeline

h4 Final Fixes Phase starts in &hellip;

include parts/countdown

h4 Give final feedback and accept each image to complete the design project.

p.duration You have 39 hours to give feedback

ul.winner
  li
    avatar

  li Alpha User is the Winner!

  li.download
    button.clean.icon.download

    p Download final submission

  li
    a(href="#") View previous submission comments

hr

ul.approval

  li.approve-all
    input(type="checkbox" ng-model="vm.approveAll" ng-true-value="true" ng-false-value="false")

    label Approve all

  li.confirm
    button.info(ng-show="vm.showConfirmApproval") Confirm final approval

ul.previews
  li.preview(ng-repeat="file in vm.files track by $index")
    ul.icons
      li.notification
        button.clean 1

      li
        button(ng-class= "{'clean': !vm.isAccepted(file), 'success': vm.isAccepted(file)}" ng-click="vm.toggleAcceptFile(file)")
          .icon.checkmark.smallest

      li
        button.clean
          .icon.download.smallest

    img.img(ng-src="{{ file.thumbnailUrl }}" ui-sref="submission-slides")

    p {{ file.name }}

