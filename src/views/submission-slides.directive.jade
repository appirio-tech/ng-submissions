ul.header
  li.submitter
    avatar(avatar-url="{{ vm.work.submitter.avatarUrl }}")

    .name-time
      .name {{ vm.work.submitter.handle }}

      time {{ vm.work.createdAt | date: 'h:mm a, MMMM d, y' }}

  li.icons
    button.clean
     .icon.download

    button.clean(ng-click="vm.acceptFile()")
     .icon.checkmark

    button.clean(ng-click="vm.showComments = !vm.showComments")
     .icon.bubble


hr

messaging.widget(ng-show="vm.showComments" thread-id="{{vm.selectedPreview.id}}" subscriber-id="{{vm.subscriberId}}")

ul.slideshow
  li
    button.clean.icon.circle-arrow.biggest(ng-click="vm.previewPrevious()")

  li.preview
    .img-container
      img(ng-src="{{ vm.selectedPreview.url }}")

    p {{ vm.work.files[vm.selectedPreviewIndex].name }}

  li
    button.clean.icon.circle-arrow.right.biggest(ng-click="vm.previewNext()")


ul.thumbnails
    li.thumbnail(ng-repeat="file in vm.work.files")
      button.clean.thumbnail
        img(ng-src="{{ file.thumbnailUrl }}", ng-click="vm.previewSelected($index)")

        .notification 1

