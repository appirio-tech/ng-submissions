ul.actions
  li.submitter
    avatar(avatar-url="{{ vm.work.submitter.avatarUrl }}")

    .name-time
      .name {{ vm.work.submitter.handle }}

      time {{ vm.work.createdAt | date: 'h:mm a, MMMM d, y' }}

  li.position
    select(ng-model="vm.selectedPosition")
      option(value="") Select Position

      option(ng-repeat="position in vm.positions" value="{{position}}") {{ position }}

    button.confirm.info(ng-show="vm.selectedPosition" ng-click="vm.selectPosition()") Select Position

  li.submissionsCount
    p {{ vm.submissionsCount }} Submissions

ul.previews
  li.preview(ng-repeat="file in vm.work.files track by $index")
    .checkmark-container
      .icon.checkmark.smallest

    img.img(ng-src="{{ file.thumbnailUrl }}" ui-sref="submission-slides")

    p {{ file.name }}